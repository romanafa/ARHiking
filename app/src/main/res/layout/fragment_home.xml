<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    android:id="@+id/constraintLayoutHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_30sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/app_theme_color">

                <TextView
                    android:id="@+id/clickActivityTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_click_buttons"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:background="@color/app_theme_color">

                    <LinearLayout
                        android:id="@+id/buttonHikeTrip"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/hikeButtonImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="13"
                            android:src="@drawable/hike" />

                        <TextView
                            android:id="@+id/hikeButtonTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:textSize="@dimen/_10ssp"
                            android:text="@string/hike_button" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonBikeTrip"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/bikeButtonImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="13"
                            android:src="@drawable/bike" />

                        <TextView
                            android:id="@+id/bikeButtonTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:textSize="@dimen/_10ssp"
                            android:text="@string/bike_button" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonSkiTrip"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/skiButtonImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="13"
                            android:src="@drawable/ski" />

                        <TextView
                            android:id="@+id/skiButtonTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:textSize="@dimen/_10ssp"
                            android:text="@string/ski_button" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonOtherTrip"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/otherButtonImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="13"
                            android:src="@drawable/other" />

                        <TextView
                            android:id="@+id/otherButtonTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:textSize="@dimen/_10ssp"
                            android:text="@string/other_button" />
                    </LinearLayout>

                    <!--<ImageButton
                        android:id="@+id/buttonHikeTrip"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/hike" />

                    <ImageButton
                        android:id="@+id/buttonBikeTrip"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/bike"/>

                    <ImageButton
                        android:id="@+id/buttonSkiTrip"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/ski"/>

                    <ImageButton
                        android:id="@+id/buttonOtherTrip"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/other"/>-->

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBrowseLibrary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_3sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="@color/app_theme_color">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/browse_library_img">

                    <TextView
                        android:id="@+id/browseLibraryTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:background="@color/white"
                        android:text="@string/browse_hike_library"
                        android:textAlignment="center"
                        android:textSize="@dimen/_18ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="-16dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/latestHikesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/latest_hikes"
                android:paddingStart="@dimen/_15sdp"
                android:background="@color/app_theme_color"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintTop_toBottomOf="@id/cardBrowseLibrary" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/hikesViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                app:layout_constraintTop_toBottomOf="@id/latestHikesTextView"
                app:layout_constraintBottom_toTopOf="@id/cardMapView" />

            <TextView
                android:id="@+id/dividerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20ssp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@color/app_theme_color"
                app:layout_constraintTop_toBottomOf="@id/hikesViewPager" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_80sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/dividerTextView"
                app:cardBackgroundColor="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/map_placeholder">

                    <TextView
                        android:id="@+id/planTripTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:background="@color/white"
                        android:text="@string/create_new_hike"
                        android:textAlignment="center"
                        android:textSize="@dimen/_18ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="-16dp" />

                    <TextView
                        android:id="@+id/planTripTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:background="@color/white"
                        android:text="This is optional implementation"
                        android:textAlignment="center"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintTop_toBottomOf="@id/planTripTextView"
                        tools:layout_editor_absoluteX="-16dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>